extends layout

block content
  h1= title

  form(method='POST' action='')
    div.form-group
      select#room.form-control(name='room' required='true' value=(undefined===item ? '' : item.room) )
        option(value='Kitchen') Kitchen
        option(value='Molecular') Molecular 
        option(value='Mouse Room') Mouse Room
        option(value='Cell Culture') Cell Culture 
        option(value='Hallway') Hallway
        option(value='Office') Office
        option(value='Closet') Closet
      br
      input#container.form-control(type='text', placeholder='Container' name='container' value=(undefined===item ? '' : item.container) )
      br
      input#content.form-control(type='text', placeholder='Content' name='content' required='true' value=(undefined===item ? '' : item.content) )
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg